  <packaging>war</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>ssmshiro Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <properties>
	<spring.version>4.3.7.RELEASE</spring.version>
  </properties>
  <dependencies>
